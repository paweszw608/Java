<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>pl.polsl.lab.worldcupstats.servlets.Login</servlet-class>
        <init-param>
            <param-name>url</param-name>
            <param-value>WorldCupStatsDatabase</param-value>
        </init-param>
        <init-param>
            <param-name>user</param-name>
            <param-value>java</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>r5</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>History</servlet-name>
        <servlet-class>pl.polsl.lab.worldcupstats.servlets.History</servlet-class>
        <init-param>
            <param-name>url</param-name>
            <param-value>WorldCupStatsDatabase</param-value>
        </init-param>
        <init-param>
            <param-name>user</param-name>
            <param-value>java</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>r5</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>WorldCupStatsServlet</servlet-name>
        <servlet-class>pl.polsl.lab.worldcupstats.servlets.WorldCupStatsServlet</servlet-class>
        <init-param>
            <param-name>url</param-name>
            <param-value>WorldCupStatsDatabase</param-value>
        </init-param>
        <init-param>
            <param-name>user</param-name>
            <param-value>java</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>r5</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>pl.polsl.lab.worldcupstats.servlets.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddNewUser</servlet-name>
        <servlet-class>pl.polsl.lab.worldcupstats.servlets.AddNewUser</servlet-class>
        <init-param>
            <param-name>url</param-name>
            <param-value>WorldCupStatsDatabase</param-value>
        </init-param>
        <init-param>
            <param-name>user</param-name>
            <param-value>java</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>r5</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>History</servlet-name>
        <url-pattern>/History</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WorldCupStatsServlet</servlet-name>
        <url-pattern>/WorldCupStatsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddNewUser</servlet-name>
        <url-pattern>/AddNewUser</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
